<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launchicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RestaurantActivity"
            android:label="@string/category_dining"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MustSeeActivity"
            android:label="@string/category_mustSee"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".EventsActivity"
            android:label="@string/category_Events"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PublicPlacesActivity"
            android:label="@string/category_publicPlaces"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>